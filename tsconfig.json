{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "esModuleInterop": true,
      "noImplicitAny": false,
      "sourceMap": true,
      "outDir": "dist",
      "strict": false,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true
    },
    "include": [
      "src/**/*.ts"
    ]
  }
  